title: $:/themes/welford/phasersonkill/base
tags: [[$:/tags/stylesheet]]
list-after: $:/themes/tiddlywiki/vanilla/base

\rules only filteredtranscludeinline transcludeinline macrodef macrocallinline

/*
Rules copied from Snow White---------------------------------------------
*/

.tw-page-controls button svg, .tw-tiddler-controls button svg, .tw-topbar button svg {
	<<transition "fill 150ms ease-in-out">>
}

.tw-tiddler-controls button.tw-selected svg {
	<<filter "drop-shadow(0px -1px 2px rgba(0,0,0,0.25))">>
}

.tw-drop-down {
	border-radius: 4px;
	<<box-shadow "2px 2px 10px rgba(0, 0, 0, 0.5)">>
}

.tw-block-dropdown {
	border-radius: 4px;
	<<box-shadow "2px 2px 10px rgba(0, 0, 0, 0.5)">>
}

.tw-modal-displayed {
	-webkit-filter: blur(4px);
}

.modal {
	border-radius: 6px;
	<<box-shadow "0 3px 7px rgba(0,0,0,0.3)">>
}

.modal-footer {
	border-radius: 0 0 6px 6px;
	<<box-shadow "inset 0 1px 0 #fff">>;
}

.tw-alert {
	border-radius: 6px;
	<<box-shadow "0 3px 7px rgba(0,0,0,0.6)">>
}

.tw-notification {
	border-radius: 6px;
	<<box-shadow "0 3px 7px rgba(0,0,0,0.3)">>
	text-shadow: 0 1px 0 rgba(255,255,255, 0.8);
}

.tw-message-box img {
	<<box-shadow "1px 1px 3px rgba(0,0,0,0.5)">>
}

/*
PhaserOnKill Stuff---------------------------------------------
*/

blockquote { border-left:2px dashed #DDD; margin-left:12px; }

/* page header */
.tw-pagetop { 
 position:fixed;
 max-height:{{$:/themes/welford/phasersonkill/metrics/headerheight}};
 width: 100%;
 top : 0px;
 left : 0px;
 padding-left: 5px;  
 z-index: 99;
 background : {{$:/themes/welford/phasersonkill/metrics/headerbgcolour}}; !important; /* as background */
 overflow:hidden;
 vertical-align:middle;
 line-height:{{$:/themes/welford/phasersonkill/metrics/headerheight}};
}

.tw-pagetop b { color:{{$:/themes/welford/phasersonkill/metrics/headerfontcolour}}; font-size:1.1em;}

.story-river {
 width: auto;
 height: 100%;
 left: 0px;
 top: {{$:/themes/welford/phasersonkill/metrics/headerheight}};
 padding: 0px 10px 0px 10px;
 margin: 0;
 background-color: #fff;}

.tw-tiddler-frame {
 width:100%;
}

.tw-tiddler-frame .body{
 width:100%;
}

/* Use the tiddler background colour for the page background */
html body.tw-body {
	background-color: <<colour background>>;
}

html:-webkit-full-screen {
	background-color: <<colour background>>;
}

/* Adjust the colour of the page controls */
body.tw-body .tw-page-controls svg {
	fill: <<colour muted-foreground>>;
}

/* Adjust the colour of the sidebar selected tabs */
body.tw-body .tw-sidebar-lists .tw-tab-buttons button.tw-tab-selected {
	background-color: <<colour background>>;
}

/* tiddler titles  */
.tw-tiddler-title {
border-bottom: 1px solid #000;
}

/* stop the p tags form adding unwanted padding at the stop of the story river */
.tw-dropzone p { margin:0px; padding:0px; }
.story-river p { padding: 0px; margin: 0px; }

/* hide the reveal stuff for the sidebar*/
span.tw-topbar {display:none;}

/* color and size of controls in topbar for smallscreen version */
.tw-pagetop svg {
padding:0;
margin:0; 
fill:red;
width:{{$:/themes/welford/phasersonkill/metrics/headerheight}};
height:{{$:/themes/welford/phasersonkill/metrics/headerheight}};
vertical-align:middle;
}

.special-search .tw-reveal .tw-search-results, .hacky-buffer .tw-reveal .tw-search-results { 
position : fixed;
top : {{$:/themes/welford/phasersonkill/metrics/headerheight}};
left : 0px;	
padding: 0px 10px 0px 10px;
margin: 0;

background: #eee;
z-index: 99;
}

.hacky-buffer .tw-reveal{ display: block; }
.hacky-buffer .tw-reveal .tw-search-results { position : static;}

.topbar-hack { 
	height : {{$:/themes/welford/phasersonkill/metrics/headerheight}};
	position : static;
}

.tw-pagetop-close-search  svg { 
position: fixed;
top : {{$:/themes/welford/phasersonkill/metrics/headerheight}};
width:{{$:/themes/welford/phasersonkill/metrics/headerheight}};
height:{{$:/themes/welford/phasersonkill/metrics/headerheight}};
z-index: 99;
}

.smallscreen-only .tw-reveal	{display : block;}
.displayblock					{display : block;}
body.tw-body .tw-tiddler-frame	{ padding: 0; }
.tw-tiddler-frame .body			{ padding: 0 0 0 10px; }


.tw-scrollable {	
	max-height: {{$:/themes/welford/phasersonkill/metrics/searchheight}};
}

/* 
small screen differences 
*/

@media (max-width: {{$:/themes/tiddlywiki/vanilla/metrics/sidebarbreakpoint}} ) 
{
	.sidebar-header		{ display:none;}	
	.largescreen-only	{ display:none; }	
	.special-search .tw-reveal .tw-search-results, .hacky-buffer .tw-reveal .tw-search-results { 
		 width: 100%;
		right: {{$:/themes/welford/phasersonkill/metrics/menuwidth}}; 
	}	
	/* close search button */
	.tw-pagetop-close-search  svg { right: {{$:/themes/welford/phasersonkill/metrics/border}}; }	
}

/* 
larger screen differences 
*/

@media (min-width: {{$:/themes/tiddlywiki/vanilla/metrics/sidebarbreakpoint}}) {

	/* Move the sidebar up so that the title lines up */
	body.tw-body .tw-sidebar-scrollable {
		position: fixed;
		left : auto;
		margin:0;
		top:{{$:/themes/welford/phasersonkill/metrics/headerheight}};
		width:{{$:/themes/welford/phasersonkill/metrics/menuwidth}};
		padding: 0 0 0 10px;
		background-color:#eee;
	}

	.tw-pagetop { 
		/*line-height:{{$:/themes/welford/phasersonkill/metrics/headerheight}};
		vertical-align:middle;*/
	}

	.story-river { 
	 right: {{$:/themes/welford/phasersonkill/metrics/menuwidth}}; 
	 position: absolute;
	}	

	.special-search .tw-reveal .tw-search-results, .hacky-buffer .tw-reveal .tw-search-results { 
	 right: {{$:/themes/welford/phasersonkill/metrics/menuwidth}}; 
	 border-right: 1px dashed #ccc;
	}

	/* Stop the tiddler info panel from bleeding into the tiddler frame padding */
	body.tw-body .tw-tiddler-info { margin: 0; }

	/* Stop message boxes from bleeding into the tiddler frame padding */
	body.tw-body .tw-message-box { margin: 21px 0 21px 0; }

	/* Hide smallscreen only stuff */
	.smallscreen-only	{ display:none;}	

	/*close search button*/	
	.tw-pagetop-close-search  svg { right: calc( {{$:/themes/welford/phasersonkill/metrics/menuwidth}} + {{$:/themes/welford/phasersonkill/metrics/border}} ); }
	/*
	.tw-pagetop-close-search  svg { display:None; }
	*/
}